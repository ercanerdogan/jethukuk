
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


@model MVCBlog.Areas.Admin.Models.DTO.CategoryVM

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Kategori ekleme işlemleri
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">

            @Html.Partial("~/Areas/Admin/Views/Shared/Partial/FormMessagesPartial.cshtml")

            <!-- general form elements -->
            <div class="box box-primary">
                <!-- form start -->
                @using (Html.BeginForm())
                {
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Name)
                            @Html.TextBoxFor(x=>x.Name, new { @class="form-control", @placeholder="Kategori adı"})
                            @Html.ValidationMessageFor(x=>x.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Description)
                            @Html.TextAreaFor(x=>x.Description, new { @class = "form-control", @placeholder = "Kategori açıklaması" })
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>

                }
            </div><!-- /.box -->
       
        </div><!--/.col (left) -->

    </div>   <!-- /.row -->
</section><!-- /.content -->